<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.quadphase.qpdex.PokemonResources"
    android:id="@+id/pokemon_resources"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="For more information, please visit: the following websites:"
        android:id="@+id/textView"
        android:autoText="false"
        android:gravity="left"
        android:layout_weight="0"
        android:textColor="#FFFFFFFF"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="100dp"
                    android:background="#81992c2d">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imagepokemonvideogames"
                        android:src="@drawable/logo_pokemon"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitCenter"
                        android:layout_weight="0.6"
                        android:autoLink="web"
                        android:clickable="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/website_pokemonvideogames"
                        android:id="@+id/pokemonvideogames"
                        android:layout_weight="0.3"
                        android:clickable="false"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:minHeight="100dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bulbapediaimage"
                        android:src="@drawable/logo_bulbapedia"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitCenter"
                        android:layout_weight="0.6"
                        android:autoLink="web"
                        android:clickable="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/website_bulbapedia"
                        android:id="@+id/bulbapedia"
                        android:layout_weight="0.3"
                        android:clickable="false"
                        android:textColor="#FFFFFFFF"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:minHeight="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/serebiiimage"
                        android:src="@drawable/logo_serebii"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitCenter"
                        android:layout_weight="0.6"
                        android:autoLink="web"
                        android:clickable="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/website_bulbapedia"
                        android:id="@+id/serebii"
                        android:layout_weight="0.3"
                        android:clickable="false"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:minHeight="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/smogonimage"
                        android:src="@drawable/logo_smogon"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitCenter"
                        android:layout_weight="0.6"
                        android:autoLink="web"
                        android:clickable="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/website_smogon"
                        android:id="@+id/smogon"
                        android:layout_weight="0.3"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:minHeight="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/pldhimage"
                        android:src="@drawable/logo_pldh"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitCenter"
                        android:layout_weight="0.6"
                        android:autoLink="web"
                        android:clickable="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/website_pldh"
                        android:id="@+id/pldh"
                        android:layout_weight="0.3"
                        android:clickable="false"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageveekun"
                        android:src="@drawable/logo_veekun"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitCenter"
                        android:layout_weight="0.6"
                        android:autoLink="web"
                        android:clickable="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/website_veekun"
                        android:id="@+id/veekun"
                        android:layout_weight="0.3"
                        android:clickable="false"
                        android:textColor="#FFFFFFFF"/>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
