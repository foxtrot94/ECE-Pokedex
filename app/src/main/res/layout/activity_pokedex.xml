<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/dexback2"
    android:onClick="playPokemonCry">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="#ff8c8c8c">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#bc3a3a3a"
            android:layout_weight="0.85">

            <!-- Eventually consider replacing for image-->

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prev"
                android:id="@+id/button_prevpkmn" />

            <TextView
                android:text="[POKEMON NAME]" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center"
                android:id="@+id/textview_pkmnname" />


            <!-- Eventually consider replacing for image-->
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:id="@+id/button_nextpkmn" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="[ENTER POKEDEX ENTRY]"
                    android:id="@+id/textview_pkmndescript"
                    android:background="#fff1f1f1"
                    android:layout_weight="0.4"
                    android:gravity="center_horizontal"
                    android:layout_margin="5dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imgview_pkmntype1"
                        android:layout_weight="0.5"
                        android:src="@drawable/typenone"
                        android:layout_margin="5dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imgview_pkmntype2"
                        android:layout_weight="0.5"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/typenone"
                        android:layout_margin="5dp" />
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See Data"
                    android:id="@+id/button_pkmndata"
                    android:layout_margin="5dp"
                    android:onClick="switchToPokemonData" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imgbutton_pkmnsprite"
                    android:layout_weight="0.1"
                    android:src="@drawable/spritetest"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="PKMN Cry"
                    android:id="@+id/button_pkmncry"
                    android:layout_weight="0.4"
                    android:layout_gravity="top|center"
                    android:layout_marginBottom="5dp"
                    android:textSize="10sp"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.99"
            android:background="#000000"></LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listv_pkdexentries"
            android:layout_weight="0.05" />
    </LinearLayout>

</LinearLayout>
