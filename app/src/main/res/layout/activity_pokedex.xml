<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hackers.intj.mchackspokedex.PokedexActivity"
    android:background="@color/default_background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/detail_background"
            android:weightSum="1">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/pokemonSprite"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.3"
                android:src="@mipmap/prof_oak"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="336dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_weight="0.4">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/pokedex_entry"
                    android:id="@+id/pokemonDescriber" />
            </LinearLayout>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="92dp"
                android:text="Detail View"
                android:id="@+id/detailButton"
                android:gravity="center_horizontal|top"
                android:onClick="switchToDetail"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <!-- Editext for Search -->
            <EditText android:id="@+id/inputSearch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Search pokemon.."
                android:inputType="textVisiblePassword"/>

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
