<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hackers.intj.mchackspokedex.DetailedPokemonActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/linearLayout">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.3"
            android:src="@mipmap/p1"
            android:scaleType="fitCenter"
            android:background="#ffb5c8ff" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:weightSum="1">
            <TextView android:text="@string/hello_world" android:layout_width="100dp"
                android:layout_height="100dp" android:id="@+id/name" android:paddingTop="40dp"
                android:textSize="@dimen/abc_text_size_menu_material"
                android:textAlignment="gravity"
                android:background="#ffa3ffca"
                android:singleLine="true"
                style="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:text="@string/hello_world"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/num"
                android:paddingTop="40dp"
                android:textAlignment="center"
                android:background="#ffc8ffb6"
                android:autoText="false"
                android:textSize="@dimen/abc_text_size_small_material"
                android:singleLine="true" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="@string/hello_world"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/types"
        android:paddingTop="40dp"
        android:textAlignment="center"
        android:background="#fac8ffb0"
        android:autoText="false"
        android:textSize="@dimen/abc_text_size_small_material"
        android:singleLine="true"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true" />

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/testybox" android:paddingTop="200dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stats"
        android:paddingTop="200dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_marginEnd="36dp"
        android:layout_alignParentEnd="false"
        android:gravity="top"
        android:layout_alignParentStart="false" />


</RelativeLayout>
